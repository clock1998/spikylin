@using Spikylin.Infrastructure.Model
@model IEnumerable<Post>
@{
}
<ul class="list">
	@foreach (var post in Model)
	{
		<a asp-page="/Post" asp-route-fileName="@post.FileName">
			<li class="list-row">
				<div class="prose">
					<p>[@post.Markdown.Meta.Date] @post.Markdown.Meta.Title</p>
						@foreach (var tag in post.Markdown.Meta.Tags)
						{
						<span class="px-1">&num;@tag</span>
						}
				</div>
			</li>
		</a>
	}
</ul>